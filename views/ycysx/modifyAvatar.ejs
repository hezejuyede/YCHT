<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>修改图片</title>
    <link rel="stylesheet" type="text/css" href="../ycysx/Modify_Avatar/css/jquery.Jcrop.css">
    <script type="text/javascript" src="../lib/jquery.min.js"></script>
    <script type="text/javascript" src="../ycysx/Modify_Avatar/js/jquery.Jcrop.js"></script>
    <script type="text/javascript" src="../ycysx/Modify_Avatar/js/xiaoguo.js"></script>
</head>
<body>
<img src="/avatar/<%= avatar %>" id="target" alt="[Jcrop Example]"/>
<div id="preview-pane">
    <div class="preview-container">
        <img src="/avatar/<%= avatar%>" class="jcrop-preview" alt="Preview"/>
    </div>
</div>
<input type="button" value="剪裁！！" id="btn">


<script type="text/javascript">
    $("input").click(function () {
        var w = parseInt($(".jcrop-holder>div:first").css("width"));
        var h = parseInt($(".jcrop-holder>div:first").css("height"));
        var x = parseInt($(".jcrop-holder>div:first").css("left"));
        var y = parseInt($(".jcrop-holder>div:first").css("top"));
        $.get("/docut",{
            "w" : w,
            "h" : h,
            "x" : x,
            "y" : y
        },function(result){
            alert(result)
            window.location="/ycysx/userinfos";
        });
    });
</script>
</body>
</html>
